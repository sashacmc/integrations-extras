{
  "version": 2,
  "title": "Zenoh router {{name.name}} lost all sessions",
  "tags": [
    "integration:zenoh_router"
  ],
  "type": "query alert",
  "query": "max(last_10m):sum:zenoh.router.sessions{*} by {name} < 1",
  "message": "@all",
  "options": {
    "thresholds": {
      "critical": 1
    },
    "notify_audit": false,
    "require_full_window": false,
    "notify_no_data": true,
    "renotify_interval": 0,
    "include_tags": true,
    "new_group_delay": 60,
    "escalation_message": "",
    "no_data_timeframe": 60,
    "silenced": {}
  },
  "priority": null,
  "restricted_roles": null
}
